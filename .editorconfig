root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.js]
indent_size = 4

[*.json]
indent_size = 2

[*.{java|kt|kts}]
indent_size = 4
# continuation_indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2
